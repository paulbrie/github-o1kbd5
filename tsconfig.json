{
  "compilerOptions": {
    "outDir": "dist/esm",
    "rootDir": "src",
    "target": "es5",
    "module": "ESNext",
    "lib": ["esnext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "Node"
  }
}
